<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_item_pop_sendVM_record"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/voicemailanimation" />

    <TextView
        android:id="@+id/tv_item_pop_sendVM_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_pop_sendVM_record"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_item_pop_sendVM_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_pop_sendVM_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_item_pop_sendVM_cancel"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/button_off"
        android:nextFocusLeft="@id/btn_item_pop_sendVM_cancel"
        android:nextFocusUp="@id/btn_item_pop_sendVM_cancel"
        android:text="@string/cancel"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_item_pop_sendVM_endcall"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignTop="@id/btn_item_pop_sendVM_cancel"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/btn_item_pop_sendVM_cancel"
        android:background="@drawable/button_off"
        android:nextFocusUp="@id/btn_item_pop_sendVM_endcall"
        android:text="@string/endcall"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_item_pop_sendVM_ok"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_off"
        android:nextFocusUp="@id/btn_item_pop_sendVM_ok"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>