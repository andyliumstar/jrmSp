<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="68dp"
    android:paddingBottom="9dp"
    android:paddingTop="7dp" >

    <ImageView
        android:id="@+id/iv_history_listitem_convType"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/tv_history_listitem_name"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignTop="@id/iv_history_listitem_convType"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_history_listitem_convType"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_history_listitem_week"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_history_listitem_name"
        android:layout_below="@id/tv_history_listitem_name"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_history_listitem_monthday"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_history_listitem_week"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_history_listitem_week"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_history_listitem_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_history_listitem_monthday"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_history_listitem_monthday"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_history_listitem_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_history_listitem_time"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_history_listitem_time"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_history_listitem_durationTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_history_listitem_year"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/tv_history_listitem_year"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_history_listitem_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_history_listitem_durationTip"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_history_listitem_durationTip"
        android:textColor="@android:color/black" />

</RelativeLayout>